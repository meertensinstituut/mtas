        </token>
        <condition>
          <item type="attribute" name="unit" />
        </condition>
      </mapping>
      <!-- END GROUP ANNOTATIONS -->

    </mappings>
    <!-- END MAPPINGS -->

  </parser>
  <!-- END CONFIGURATION MTAS CHAT PARSER -->

</mtas>